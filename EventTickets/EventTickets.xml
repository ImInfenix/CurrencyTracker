<GuiXml>
  <Controls>
    <TopLevelControl name="GUI_EventTicketsWarning" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="48" y="48" />
      <Anchor point="CENTER" relativeTo="GuiRoot" relativePoint="CENTER" offsetY="50" />

      <OnMoveStop>
        CurrencyTracker.OnIndicatorMoveStopEventTicketsWarning()
      </OnMoveStop>

      <Controls>

        <Texture name="$(parent)A" textureFile="esoui\art\progression\abilityframe_empty.dds" alpha="1">
          <Dimensions x="72" y="48" />
          <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
          <TextureCoords left="0" right="1" top="0" bottom="1" />
        </Texture>

        <Texture name="$(parent)B" textureFile="esoui\art\actionbar\abilityframe64_up.dds" alpha="1">
          <Dimensions x="48" y="32" />
          <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER"/>
          <TextureCoords left="0" right="1" top="0" bottom="1" />
        </Texture>

        <Texture name="$(parent)C" textureFile="/esoui/art/currency/currency_eventticket.dds" alpha="1">
          <Dimensions x="24" y="24" />
          <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="LEFT" offsetX="15"/>
        </Texture>

        <Label name="$(parent)Text" text="12" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_HIGHLIGHT" horizontalAlignment="CENTER" verticalAlignment="CENTER" font="ZoFontGame" resizeToFitDescendents="true">
            <Anchor point="CENTER" relativeTo="$(parent)Icon" relativePoint="LEFT" offsetX="35"/>
        </Label>
      </Controls>
    </TopLevelControl>
  </Controls>
</GuiXml>
